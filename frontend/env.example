# Vite Environment Variables
# Note: In Vite, environment variables must be prefixed with VITE_ to be accessible in the browser

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api
VITE_API_TIMEOUT=10000

# Application Configuration
VITE_APP_NAME=CRM Frontend
VITE_APP_VERSION=1.0.0

# Environment
VITE_NODE_ENV=development
VITE_DEBUG=true

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG_LOGS=true

# External Services (if needed)
# VITE_GOOGLE_ANALYTICS_ID=your-google-analytics-id
# VITE_SENTRY_DSN=your-sentry-dsn

# Development/Production URLs
VITE_DEV_SERVER_URL=http://localhost:5173
VITE_PROD_URL=http://localhost:80
